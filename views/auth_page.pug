doctype html
html
    head
        title Main
        link(rel='stylesheet', type='text/css', href='/css/basic.css')
        link(rel='stylesheet', type='text/css', href='/css/auth/submit-container.css')
    body
        #navbar
            button(onclick="location.href='/main'") MAIN
            button(onclick="location.href='/products'") PRODUCTS
            button(onclick="location.href='/profile'") PROFILE
        .auth-container
            .auth-box
                form(action= actionLink method = "POST")
                    label= labelText
                    .inputs
                        input(name = "name"  type="text", required placeholder="Name")
                        input(name = "password"  type="password", required placeholder="Password")
                    .buttons
                        button#submit-button(type="Submit")= buttonText
                a(href=redirectLink, class="redirect-link")= redirectText
                if message
                    p.error-message= message
